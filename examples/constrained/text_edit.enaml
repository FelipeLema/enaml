
defn MainWindow:
    Window:
        title = "Form Layout"
        PlainTextEdit -> editor:
            text = 'Test'
            text >> print(text)
            cursor_position >> print(cursor_position)
            wrap_lines := wrap.checked
            read_only := ro.checked
        CheckBox -> wrap:
            text = 'Wrap lines:'
        CheckBox -> ro:
            text = 'Read only:'
        Label:
            text << '%d/%d' % (editor.cursor_line, editor.cursor_column)
